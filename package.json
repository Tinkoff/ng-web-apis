{
    "name": "ng-web-apis",
    "version": "4.6.0",
    "private": true,
    "description": "A set of common utils for consuming Web APIs with Angular",
    "keywords": [
        "angular",
        "ng",
        "window",
        "api",
        "web api",
        "navigator",
        "user agent"
    ],
    "homepage": "https://github.com/taiga-family/ng-web-apis#README",
    "bugs": "https://github.com/taiga-family/ng-web-apis/issues",
    "repository": "https://github.com/taiga-family/ng-web-apis",
    "license": "Apache-2.0",
    "author": {
        "name": "Alex Inkin",
        "email": "alexander@inkin.ru",
        "url": "https://twitter.com/Waterplea"
    },
    "contributors": [
        "Roman Sedov <79601794011@ya.ru>",
        "Vladimir Potekhin <vladimir.potekh@gmail.com>",
        "Maksim Ivanov <splincodewd@yandex.ru>",
        "Igor Katsuba <katsuba.igor@gmail.com>",
        "Dmitryi Khirnyi",
        "Dmitry Efimenko",
        "Andrew Grekov <hr@thekiba.io>",
        "Debmallya Bhattacharya <debmallya.bhattacharya@blueface.com>",
        "Vsevolod Arutiunov <sevaru@inbox.ru>"
    ],
    "workspaces": [
        "libs/*"
    ],
    "scripts": {
        "prepare": "husky",
        "start": "nx serve demo --open",
        "lint": "eslint .",
        "stylelint": "stylelint '**/*.{less,css}' --config package.json",
        "typecheck": "tsc --noEmit --skipLibCheck",
        "test": "nx run-many --target test --all --output-style=stream --nxBail",
        "prettier": "prettier !package-lock.json . --ignore-path .gitignore",
        "prebump": "npx syncer && npx nx run-many -t build --exclude demo",
        "bump": "npx nx run-many -t publish --exclude demo"
    },
    "commitlint": {
        "extends": [
            "@taiga-ui/commitlint-config"
        ]
    },
    "lint-staged": {
        "*.less": [
            "stylelint --fix"
        ],
        "*.{js,ts,html,md,less,json}": [
            "prettier --write",
            "git add"
        ],
        "*.{js,ts}": [
            "eslint --fix",
            "git add"
        ]
    },
    "browserslist": [
        "extends @taiga-ui/browserslist-config"
    ],
    "prettier": "@taiga-ui/prettier-config",
    "eslintConfig": {
        "extends": [
            "plugin:@taiga-ui/experience/all"
        ],
        "rules": {
            "prefer-promise-reject-errors": "off",
            "@angular-eslint/no-attribute-decorator": "off",
            "@angular-eslint/prefer-output-readonly": "off",
            "@typescript-eslint/promise-function-async": "off",
            "jest/no-jasmine-globals": "off",
            "jest/no-test-prefixes": "off",
            "jest/prefer-importing-jest-globals": "off",
            "rxjs/no-ignored-observable": "off",
            "rxjs/no-implicit-any-catch": "off",
            "rxjs/no-topromise": "off"
        },
        "root": true
    },
    "stylelint": {
        "extends": [
            "@taiga-ui/stylelint-config"
        ]
    },
    "devDependencies": {
        "@angular-builders/custom-webpack": "16.0.1",
        "@angular-devkit/build-angular": "16.2.15",
        "@angular-devkit/core": "16.2.15",
        "@angular/animations": "16.2.12",
        "@angular/cdk": "16.2.14",
        "@angular/cli": "16.2.15",
        "@angular/common": "16.2.12",
        "@angular/compiler": "16.2.12",
        "@angular/compiler-cli": "16.2.12",
        "@angular/core": "16.2.12",
        "@angular/forms": "16.2.12",
        "@angular/language-service": "16.2.12",
        "@angular/platform-browser": "16.2.12",
        "@angular/platform-browser-dynamic": "16.2.12",
        "@angular/platform-server": "16.2.12",
        "@angular/router": "16.2.12",
        "@angular/service-worker": "16.2.12",
        "@commitlint/cli": "19.5.0",
        "@commitlint/config-conventional": "19.5.0",
        "@nguniversal/builders": "16.2.0",
        "@nguniversal/express-engine": "16.2.0",
        "@nx/devkit": "19.7.3",
        "@nx/node": "19.7.3",
        "@nx/workspace": "19.7.3",
        "@taiga-ui/addon-doc": "4.7.0",
        "@taiga-ui/addon-mobile": "4.7.0",
        "@taiga-ui/auto-changelog-config": "0.185.0",
        "@taiga-ui/browserslist-config": "0.185.0",
        "@taiga-ui/cdk": "4.7.0",
        "@taiga-ui/commitlint-config": "0.185.0",
        "@taiga-ui/core": "4.7.0",
        "@taiga-ui/editor": "4.7.0",
        "@taiga-ui/eslint-plugin-experience": "0.185.0",
        "@taiga-ui/event-plugins": "4.2.0",
        "@taiga-ui/icons": "4.7.0",
        "@taiga-ui/kit": "4.7.0",
        "@taiga-ui/legacy": "4.7.0",
        "@taiga-ui/prettier-config": "0.185.0",
        "@taiga-ui/release-it-config": "0.185.0",
        "@taiga-ui/stylelint-config": "0.185.0",
        "@taiga-ui/styles": "4.7.0",
        "@taiga-ui/syncer": "0.185.0",
        "@taiga-ui/tsconfig": "0.185.0",
        "@types/dom-speech-recognition": "0.0.4",
        "@types/dom-view-transitions": "1.0.5",
        "@types/dompurify": "3.0.5",
        "@types/estree": "1.0.5",
        "@types/express": "4.17.21",
        "@types/highlight.js": "10.1.0",
        "@types/jasmine": "5.1.4",
        "@types/jasminewd2": "2.0.13",
        "@types/node": "22.5.5",
        "@types/react": "18.3.7",
        "@types/react-dom": "18.3.0",
        "@types/webmidi": "2.1.0",
        "babel-loader": "9.2.1",
        "core-js": "3.38.1",
        "glob": "11.0.0",
        "highlight.js": "11.10.0",
        "http-server": "14.1.1",
        "husky": "9.1.6",
        "jasmine-core": "5.3.0",
        "jasmine-spec-reporter": "7.0.0",
        "karma": "6.4.4",
        "karma-chrome-launcher": "3.2.0",
        "karma-coverage": "2.2.1",
        "karma-jasmine": "5.1.0",
        "karma-jasmine-html-reporter": "2.1.0",
        "lint-staged": "15.2.10",
        "ng-packagr": "16.2.3",
        "ngx-highlightjs": "10.0.0",
        "ngx-markdown": "16.0.0",
        "nx": "19.7.3",
        "prettier": "3.3.3",
        "rxjs": "7.8.1",
        "ts-node": "10.9.2",
        "tslib": "2.7.0",
        "typescript": "5.0.4",
        "webpack": "5.94.0"
    },
    "syncer": {
        "includePaths": [
            "./libs",
            "./package-lock.json"
        ],
        "matchPackageNames": [
            "@ng-web-apis/*",
            "ng-web-apis"
        ],
        "ignorePackageNames": []
    }
}
