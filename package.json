{
    "name": "ng-web-apis",
    "private": true,
    "description": "A set of common utils for consuming Web APIs with Angular",
    "keywords": [
        "angular",
        "ng",
        "window",
        "api",
        "web api",
        "navigator",
        "user agent"
    ],
    "homepage": "https://github.com/ng-web-apis/common#README",
    "bugs": "https://github.com/ng-web-apis/common/issues",
    "repository": "https://github.com/ng-web-apis/common",
    "license": "MIT",
    "author": {
        "name": "Alex Inkin",
        "email": "alexander@inkin.ru"
    },
    "contributors": [
        "Roman Sedov <79601794011@ya.ru> (http://marsibarsi.me/)",
        "Dmitryi Khirnyi",
        "Andrew Grekov <hr@thekiba.io>",
        "Debmallya Bhattacharya <debmallya.bhattacharya@blueface.com>"
    ],
    "workspaces": [
        "apps/*",
        "projects/*"
    ],
    "scripts": {
        "postinstall": "husky install && ngcc --async",
        "start": "nx serve demo --open",
        "build": "nx build",
        "postbuild": "node scripts/postbuild.js",
        "release": "standard-version",
        "release:patch": "npm run release -- --release-as patch",
        "release:minor": "npm run release -- --release-as minor",
        "release:major": "npm run release -- --release-as major",
        "publish": "npm run build && npm publish ./dist/common",
        "*** Workflow ***": "",
        "lint": "eslint . --fix",
        "typecheck": "tsc --noEmit --skipLibCheck",
        "test": "nx run-many --target test --all --output-style=stream --parallel=1",
        "prettier": "prettier '**/*.{svg,yml,js,ts,html,md,less,json}'",
        "*** CI ***": "",
        "affected:test:libs": "nx affected --target test --output-style=stream",
        "affected:build:libs": "nx affected --target build --output-style=stream",
        "run-many:build:libs": "nx run-many --target build --all --output-style=stream",
        "run-many:publish:libs": "nx run-many --target publish --all --output-style=stream"
    },
    "lint-staged": {
        "*.{js,ts,html,md,less,json}": [
            "prettier --write",
            "git add"
        ],
        "*.{js,ts}": [
            "eslint --fix",
            "git add"
        ]
    },
    "devDependencies": {
        "@angular-builders/custom-webpack": "12.1.3",
        "@angular-devkit/build-angular": "12.2.15",
        "@angular-devkit/core": "12.2.15",
        "@angular/animations": "12.2.15",
        "@angular/cli": "12.2.15",
        "@angular/common": "12.2.15",
        "@angular/compiler": "12.2.15",
        "@angular/compiler-cli": "12.2.15",
        "@angular/core": "12.2.15",
        "@angular/forms": "12.2.15",
        "@angular/language-service": "12.2.15",
        "@angular/platform-browser": "12.2.15",
        "@angular/platform-browser-dynamic": "12.2.15",
        "@angular/platform-server": "12.2.15",
        "@angular/router": "12.2.15",
        "@commitlint/cli": "^11.0.0",
        "@commitlint/config-conventional": "^11.0.0",
        "@ng-web-apis/geolocation": "2.0.0",
        "@ng-web-apis/intersection-observer": "3.0.0",
        "@ng-web-apis/midi": "1.2.0",
        "@ng-web-apis/payment-request": "1.0.1",
        "@ng-web-apis/permissions": "2.0.0",
        "@nguniversal/builders": "^12.1.3",
        "@nguniversal/express-engine": "^12.1.3",
        "@nrwl/cli": "15.9.3",
        "@nrwl/node": "15.9.3",
        "@nrwl/nx-cloud": "15.3.5",
        "@nrwl/tao": "15.9.3",
        "@nrwl/workspace": "15.9.3",
        "@tinkoff/eslint-config": "^1.22.0",
        "@tinkoff/eslint-config-angular": "^1.23.0",
        "@tinkoff/prettier-config": "^1.22.0",
        "@types/dompurify": "^2.4.0",
        "@types/estree": "^0.0.51",
        "@types/express": "^4.17.13",
        "@types/jasmine": "3.10.3",
        "@types/jasminewd2": "2.0.10",
        "@types/jest": "^27.4.1",
        "@types/node": "9.6.61",
        "@types/react": "17.0.30",
        "@types/react-dom": "17.0.9",
        "babel-loader": "9.1.2",
        "core-js": "3.20.3",
        "coveralls": "3.1.1",
        "husky": "7.0.4",
        "jasmine-core": "4.0.0",
        "jasmine-spec-reporter": "7.0.0",
        "karma": "6.3.11",
        "karma-chrome-launcher": "3.1.0",
        "karma-coverage-istanbul-reporter": "3.0.3",
        "karma-jasmine": "4.0.1",
        "karma-jasmine-html-reporter": "1.7.0",
        "lint-staged": "12.2.1",
        "ng-packagr": "12.2.6",
        "prettier": "2.5.1",
        "rxjs": "7.5.2",
        "standard-version": "9.3.2",
        "ts-node": "9.0.0",
        "tslib": "2.5.0",
        "tslint": "6.1.3",
        "typescript": "4.3.5",
        "webpack": "5.80.0",
        "zone.js": "0.11.4"
    },
    "engines": {
        "node": ">= 16.14",
        "npm": ">= 8.3",
        "yarn": "Please use npm instead of yarn to install dependencies"
    },
    "overrides": {
        "webpack": "$webpack",
        "babel-loader": "$babel-loader"
    },
    "standard-version": {
        "scripts": {
            "postbump": "node scripts/syncVersions.js && git add **/package.json"
        }
    }
}
