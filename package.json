    "engines": {
        "node": "21.6.1",
        "npm": "10.4.0",
        "yarn": "Please use npm instead of yarn to install dependencies"
    },
    "standard-version": {
        "scripts": {
            "postbump": "node scripts/syncVersions.js && git add **/package.json"
        }
    }
}
