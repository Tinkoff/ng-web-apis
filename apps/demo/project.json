{
    "name": "demo",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "root": "libs/demo/",
    "sourceRoot": "libs/demo/src",
    "projectType": "application",
    "prefix": "app",
    "targets": {
        "build": {
            "executor": "@angular-builders/custom-webpack:browser",
            "outputs": ["dist/demo"],
            "options": {
                "baseHref": "/",
                "customWebpackConfig": {
                    "path": "apps/demo/webpack.config.ts"
                },
                "aot": true,
                "outputPath": "dist/demo",
                "index": "apps/demo/src/index.html",
                "main": "apps/demo/src/main.ts",
                "polyfills": "apps/demo/src/polyfills.ts",
                "tsConfig": "apps/demo/tsconfig.app.json",
                "styles": [
                    "node_modules/@taiga-ui/core/styles/taiga-ui-theme.less",
                    "node_modules/@taiga-ui/core/styles/taiga-ui-fonts.less",
                    "node_modules/@taiga-ui/styles/taiga-ui-global.less",
                    "apps/demo/src/styles.css",
                    "node_modules/prismjs/themes/prism-okaidia.css"
                ],
                "scripts": [
                    "node_modules/marked/lib/marked.js",
                    "node_modules/prismjs/prism.js",
                    "node_modules/prismjs/components/prism-less.min.js",
                    "node_modules/prismjs/components/prism-markup.min.js",
                    "node_modules/prismjs/components/prism-typescript.min.js"
                ],
                "assets": [
                    {
                        "glob": "**/*",
                        "input": "apps/demo/src/assets/",
                        "output": "./assets/"
                    },
                    {
                        "glob": "**/*",
                        "input": "node_modules/@taiga-ui/icons/src",
                        "output": "assets/taiga-ui/icons"
                    }
                ]
            },
            "configurations": {
                "development": {
                    "buildOptimizer": false,
                    "optimization": false,
                    "vendorChunk": true,
                    "extractLicenses": false,
                    "sourceMap": true,
                    "namedChunks": true
                },
                "github": {
                    "baseHref": "/common/",
                    "fileReplacements": [
                        {
                            "replace": "apps/demo/src/environments/environment.ts",
                            "with": "apps/demo/src/environments/environment.prod.ts"
                        }
                    ],
                    "optimization": true,
                    "outputHashing": "all",
                    "sourceMap": false,
                    "namedChunks": false,
                    "buildOptimizer": true,
                    "statsJson": false,
                    "progress": false
                },
                "production": {
                    "fileReplacements": [
                        {
                            "replace": "apps/demo/src/environments/environment.ts",
                            "with": "apps/demo/src/environments/environment.prod.ts"
                        }
                    ],
                    "optimization": true,
                    "outputHashing": "all",
                    "sourceMap": false,
                    "namedChunks": false,
                    "buildOptimizer": true,
                    "statsJson": false,
                    "progress": false
                }
            },
            "defaultConfiguration": "production"
        },
        "build-gh-pages": {
            "executor": "nx:run-commands",
            "options": {
                "parallel": false,
                "commands": [
                    "echo 'Github pages require special baseHref + 404.html'",
                    "echo 'Read more: https://angular.io/guide/deployment#deploy-to-github-pages'",
                    "echo ------",
                    "nx build demo -c github",
                    "cp dist/demo/index.html dist/demo/404.html",
                    "nx run demo:prerender -c github"
                ]
            }
        },
        "serve": {
            "executor": "@angular-builders/custom-webpack:dev-server",
            "options": {
                "browserTarget": "demo:build:development"
            },
            "configurations": {
                "development": {
                    "browserTarget": "demo:build:development"
                }
            },
            "defaultConfiguration": "development"
        },
        "serve-ssr": {
            "executor": "@nguniversal/builders:ssr-dev-server",
            "options": {},
            "configurations": {
                "production": {
                    "browserTarget": "demo:build:production",
                    "serverTarget": "demo:server:production"
                },
                "development": {
                    "serverTarget": "demo:server:development",
                    "browserTarget": "demo:build:development"
                }
            },
            "defaultConfiguration": "development"
        },
        "generate-routes-file": {
            "executor": "nx:run-commands",
            "options": {
                "command": "ts-node ./scripts/generate-demo-routes-file.ts"
            },
            "configurations": {
                "github": {}
            },
            "defaultConfiguration": "github"
        },
        "server": {
            "executor": "@angular-builders/custom-webpack:server",
            "options": {
                "customWebpackConfig": {
                    "path": "apps/demo/webpack.config.ts"
                },
                "outputPath": "dist/demo/server",
                "main": "apps/demo/server.ts",
                "tsConfig": "apps/demo/tsconfig.server.json",
                "sourceMap": true,
                "optimization": false
            },
            "configurations": {
                "production": {
                    "outputHashing": "media",
                    "sourceMap": false,
                    "optimization": true
                },
                "development": {}
            },
            "defaultConfiguration": "production"
        },
        "prerender": {
            "executor": "@nguniversal/builders:prerender",
            "options": {
                "browserTarget": "demo:build:production",
                "serverTarget": "demo:server:production",
                "routesFile": "./apps/demo/routesFile.txt"
            },
            "configurations": {
                "production": {
                    "browserTarget": "demo:build:production"
                },
                "github": {
                    "browserTarget": "demo:build:github"
                }
            },
            "dependsOn": [
                {
                    "target": "generate-routes-file",
                    "projects": "self",
                    "params": "ignore"
                }
            ]
        }
    }
}
