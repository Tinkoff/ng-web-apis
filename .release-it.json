{
    "verbose": true,
    "git": {
        "requireBranch": "main",
        "commitMessage": "chore(release): v${version}",
        "tagName": "v${version}"
    },
    "github": {
        "release": false,
        "releaseNotes": "npx auto-changelog --stdout"
    },
    "npm": {
        "publish": false,
        "skipChecks": true,
        "allowSameVersion": true
    },
    "plugins": {
        "@semabit/release-it-bumper": {
            "out": [
                {
                    "file": "libs/**/package.json",
                    "path": "version"
                },
                {
                    "file": "libs/**/package.json",
                    "path": "peerDependencies['@ng-web-apis/common']"
                }
            ]
        }
    },
    "hooks": {
        "after:bump": "npx nx run-many -t build --parallel=false --exclude demo && npx nx run-many -t publish --parallel=false --exclude demo",
        "after:release": "echo Successfully released ${name} v${version} to ${repo.repository}."
    }
}
